package ar.edu.unlam.pb;

public class Persona {
	private boolean viva;
	private int edad;
	
	public Persona() {
		viva = true;
		edad =0;
	}
	public void morir() {
		viva = false;
	}
	public boolean estaViva() {
		return viva;
	}
	public void setViva(boolean viva) {
		this.viva = viva;
	}
	public int getEdad() {
		return edad;
	}
	public void setEdad(int edad) {
		this.edad = edad;
	}
}
//Completar la clase persona
